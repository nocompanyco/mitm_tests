{
  "name": "5_install_electron.build",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "author": "Nathan A. Fain <nathan@nocompany.co>",
  "description": "mitm",
  "build": {
    "appId": "org.counterpart.mitm",
    "productName": "mitm",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "mac": {
      "category": "your.app.category.type",
      "target": [
        "zip"
      ],
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "type": "development"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "nsis": {
      "allowElevation": true,
      "oneClick": false,
      "perMachine": true
    },
    "linux": {
      "target": [
        "deb",
        "apk",
        "tar.gz"
      ]
    }
  },
  "scripts": {
    "pack": "electron-builder --dir",
    "dist:all": "dist:windows dist:mac dist:linux",
    "dist:windows": "WINEPREFIX=~/.win32 WINEARCH=win32 electron-builder --win --x64 --i32",
    "dist:mac": "electron-builder --mac",
    "disk:linux": "electron-builder --linux",
    "start_node": "node .",
    "start": "electron ."
  },
  "postinstall": "electron-builder install-app-deps",
  "nodeGypRebuild": true,
  "dependencies": {
    "cap": "^0.2.1",
    "pcap": "^3.1.0"
  },
  "devDependencies": {
    "electron": "^9.0.0",
    "electron-builder": "^22.7.0",
    "electron-rebuild": "^1.11.0"
  }
}
